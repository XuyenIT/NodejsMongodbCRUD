<!DOCTYPE html>
<html lang="en">

<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>

    <div class="container mt-3">
        <%- include("./layout/header")%>
            <h2>Striped Rows</h2>
            <% if(message){%>
                <div class="alert alert-success alert-dismissible fade show">
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    <strong>
                        <%= message.message %>
                    </strong>
                </div>
                <%}%>
                    <form method="get" action="/search">
                        <div class="form-group">
                            <label for="price" class="form-label">Image:</label>
                            <input type="text" class="form-control" name="name">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                    <%if(products !="" ){%>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Image</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%products.forEach((item,index)=>{%>
                                    <tr>
                                        <td>
                                            <%=item.name%>
                                        </td>
                                        <td>
                                            <%=item.price%>
                                        </td>
                                        <td>
                                            <img src="<%=item.image%>" class="img-thumbnail" width="100" />

                                        </td>
                                        <td>
                                            <a href="/update/<%=item._id%>" class="btn btn-warning">Update</a>
                                            <a href="/delete/<%=item._id%>" class="btn btn-danger">Delete</a>
                                            <%if(item.status==1){%>
                                                <a href="/deactive/<%=item._id%>" class="btn btn-success">Active</a>
                                                <%}else{%>
                                                    <a href="/deactive/<%=item._id%>" class="btn btn-info">Deactive</a>
                                                    <%}%>
                                        </td>
                                    </tr>
                                    <%})%>

                            </tbody>
                        </table>

                        <%}%>

    </div>

</body>

</html>